#!/bin/bash
path=`dirname $BASH_SOURCE`
path_home=`dirname $path`
path_parent=`dirname $path_home`


usageError () {
    echo "Usuage Error"
}

#List skills function
listSkills () {

    if (( `ls $path/support | wc -l` == 0 ))
    then
        echo "I don't know any skill."
        echo "Try: karla learn <skill_name> to learn a skill."
        exit 1
    fi

    echo "### skills #############################"
    for i in `ls $path/support`
    do
        if [[ -f $path/support/$i/info.txt ]]
        then
            echo -e "$i\t`head -1 $path/support/$i/info.txt`"
        else
            echo -e "$i\tUnknown Version, try: karla update $i"
        fi
    done
    echo ""
}

exeSkill() {
    paw="$path/support/$1"
    shift 1

    if [[ -f $paw/main.py ]]
    then

        python3 $paw/main.py $@

    elif [[ -f $paw/main ]]
    then
        $paw/main $@
    else
        echo "Startup bash script 'main' or python programme 'main.py' not found."
        echo "Try updating the skill."
        exit 1
    fi
}

argumentManager () {
    #TAP FORMULAE
    if [[ $1 == "tap" ]]
    then
        
        #SOURCE AND RUN TAP
        source .tap
        shift 1
        tap $path $@
        exit 0

    #RUN COMMANDS
    elif [[ -d "$path/support/$1" ]]
    then

        exeSkill $@
        exit 0

    #ONE ARGUMENT FUNCTIONS
    elif (( $# == 1 ))
    then 
        
        #CASE
        case $1 in
            #PRINT USAGE
            "--help" | "-h")
                cat $path/info.txt
                exit 0
                ;;

            #PRINT VERSION
            "--version" | "-v")
                cat $path_home/.info | head -1
                exit 0
                ;;

            #SELF UPDATE
            "update" | "upgrade")
                (cd $path_home && git reset --hard 1> /dev/null; git pull)
                exit 0
                ;;

            #SHOW
            "show")
                listSkills
                exit 0
                ;;

            #INCORRECT USAGE
            *)
                usageError
                exit 0
                ;;
        esac

    #TWO ARGUMENT FUNCTIONS
    elif (( $# == 2 ))
    then

        case $1 in

            #UPDATE
            "update" | "upgrade")
                if [[ -d $path/support/$2 ]]
                then
                    rm -rf $path/support/$2
                    source .learn
                    learn $path $2
                    source .moveman
                    moveman $path_home $2
                    exit 0
                else
                    echo "I don't know about $2."
                    echo "Try => karla learn $2"
                    exit 1
                fi
                ;;

            #LEARN
            "learn" | "install")
                if [[ -d $path/support/$2 ]]
                then
                    echo "I already know this skill!"
                else
                    #git clone https://github.com/trishitdedhia/$2.git $path/support/$2
                    source .learn
                    learn $path $2
                    source .moveman
                    moveman $path_home $2
                fi
                exit 0
                ;;
            
            #FORGET
            "forget" | "unlearn")
                source .forget
                forget $path $path_home $2
                exit 0
                ;;

            #LIST
            "list")
                if  [[ $2 == "skills" ]]
                then
                    listSkills
                    exit 0
                else
                    echo "Please specify what to list."
                    exit 0
                fi
                ;;

            #DEFAULT
            *)
                usageError
                exit 0
                ;;
            esac
    fi 
                
}

while [[ $# != 0 ]]
do
    argumentManager "$@"
done
